{
  "name": "jobber-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/jobber-auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "dependsOn": ["^generate-types"],
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "jobber-auth:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "jobber-auth:build:development"
        },
        "production": {
          "buildTarget": "jobber-auth:build:production"
        }
      }
    },
    "generate-types": {
      "command": "prisma generate",
      "options": {
        "cwd": "apps/jobber-auth"
      }
    },
    "migrate-prisma": {
      "command": "prisma migrate dev",
      "options": {
        "cwd": "apps/jobber-auth"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["^generate-types"],
      "options": {
        "jestConfig": "apps/jobber-auth/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
